name: Deploy React app to GitHub Pages

on:
  push:
    branches:
      - main  

jobs:
  deploy:
    runs-on: ubuntu-latest  

    steps:
    - name: Checkout repository
      uses: actions/checkout@v3
      with:
        token: ${{ secrets.GITHUB_TOKEN }}  
    - name: Set up Node.js
      uses: actions/setup-node@v2
      with:
        node-version: '18' 
    - name: Install dependencies
      run: |
        npm install
        npm install gh-pages --save-dev  # Install gh-pages to deploy to GitHub Pages

    - name: Set up Git user
      run: |
        git config --global user.name "Yunitula"  # Set your GitHub username
        git config --global user.email "yunishjt@gmail.com"  # Set your GitHub email
        git config --global url."https://${{ secrets.GITHUB_TOKEN }}@github.com".insteadOf "https://github.com"  # Use the GITHUB_TOKEN for authentication instead of prompting for a password


    - name: Build the app
      run: npm run build 

    - name: Deploy to GitHub Pages
      run: |
        npm run deploy  # Run the deploy script to push the build folder to gh-pages branch
      env:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }} 
